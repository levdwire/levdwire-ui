{
  "compilerOptions"   : {
    "lib"               : ["dom", "es2015"],
    "outDir"            : "./library/cjs/",
    "rootDir"           : "./source/",
    "sourceMap"         : true,
    "declaration"       : true,
    "declarationMap"    : true,
    "noImplicitAny"     : true,
    "module"            : "ESNext",
    "target"            : "ESNext",
    "jsx"               : "react",
    "allowJs"           : true,
    "moduleResolution"  : "Node",
    "esModuleInterop"   : true
  },
  "include"           : ["source/**/*.ts", "source/**/*.d.ts", "source/types/**/*.d.ts"],
  "exclude"           : ["node_modules", "distribute", "library"],
  "typeRoots"         : ["./node_modules/@types", "./source"]
}